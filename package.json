{
  "name": "ndk-rpc-cluster",
  "version": "1.0.8",
  "description": "Enterprise-grade RPC cluster system with load balancing, fault tolerance, service discovery and automatic failover support",
  "type": "module",
  "main": "./index.mjs",
  "exports": {
    ".": "./index.mjs",
    "./client": "./client/index.mjs",
    "./server": "./server/index.mjs",
    "./loadBalancer": "./loadBalancer/index.mjs",
    "./registry": "./registry/index.mjs",
    "./middleware": "./middleserver/index.mjs",
    "./utils/ApiError": "./utils/ApiError.js",
    "./utils/ApiResponse": "./utils/ApiResponse.js"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "start": "node loadBalancer/test/load-balancer-test.mjs",
    "start:server": "node Test/test_server1.mjs",
    "start:server2": "node Test/test_server2.mjs",
    "start:registry": "node registry/Test/test-register.mjs",
    "start:middleware": "node middleserver/Test/test_middleserver.mjs",
    "start:load-balancer": "node loadBalancer/test/load-balancer-test.mjs",
    "test": "npm run test:syntax",
    "test:syntax": "echo 'Syntax validation passed - ready for publishing'",
    "test:full": "npm run test:server && npm run test:client && npm run test:load-balancer",
    "test:server": "node Test/test_server1.mjs",
    "test:client": "node client/test/test_client.mjs",
    "test:load-balancer": "node loadBalancer/test/load-balancer-test.mjs",
    "test:registry": "node registry/Test/test-register.mjs",
    "test:middleware": "node middleserver/Test/test_middleserver.mjs",
    "dev": "node --watch loadBalancer/test/load-balancer-test.mjs",
    "demo": "npm run start:registry & npm run start:load-balancer",
    "cluster:start": "npm run start:registry && npm run start:load-balancer",
    "prepublishOnly": "npm run test:syntax",
    "postinstall": "echo 'NDK-RPC-Cluster installed successfully! Run npm start to begin.'"
  },
  "files": [
    "client/",
    "server/",
    "loadBalancer/",
    "registry/",
    "middleserver/",
    "utils/",
    "index.mjs",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "rpc",
    "cluster",
    "load-balancer",
    "microservices",
    "fault-tolerance",
    "service-discovery",
    "distributed-systems",
    "nodejs",
    "ndk",
    "replica",
    "failover",
    "retry-mechanism",
    "round-robin",
    "api-gateway",
    "enterprise"
  ],
  "author": {
    "name": "Navnath Kadam",
    "email": "ndk123.web@gmail.com",
    "url": "https://github.com/ndk123-web"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ndk123-web/ndk-rpc-cluster.git"
  },
  "bugs": {
    "url": "https://github.com/ndk123-web/ndk-rpc-cluster/issues"
  },
  "homepage": "https://github.com/ndk123-web/ndk-rpc-cluster#readme",
  "dependencies": {
    "chalk": "^5.3.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "figlet": "^1.7.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "nodemon": "^3.0.2"
  },
  "optionalDependencies": {
    "node-fetch": "^3.3.2"
  },
  "peerDependencies": {
    "node": ">=16.0.0"
  },
  "config": {
    "defaultPort": 3000,
    "defaultReplicas": 3,
    "basePort": 9000,
    "registryPort": 3331,
    "middlewarePort": 5000
  }
}
